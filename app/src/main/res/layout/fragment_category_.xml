    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />
</LinearLayout>
</ScrollView>
