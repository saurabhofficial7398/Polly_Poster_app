<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".Activity.Activity.Social_Media_Details_Activity">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#6A1B9A"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Social Media Detail"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation"
            android:layout_below="@id/header_section"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/textview_background"
                        android:layout_marginTop="10dp"
                        android:padding="8dp">

                        <!-- Left Icon -->
                        <ImageView
                            android:id="@+id/facebook_icon"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_facebook"
                            android:contentDescription="select_political_party_icon" />
                        <View
                            android:id="@+id/facebook_line"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/facebook_icon"
                            android:layout_marginLeft="2dp"
                            android:background="@color/black" />
                        <EditText
                            android:id="@+id/facebook_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/facebook_icon"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center_vertical"
                            android:maxLength="40"
                            android:inputType="textCapCharacters"
                            android:hint=" "
                            android:textSize="16sp"
                            android:background="@android:color/transparent" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/textview_background"
                        android:layout_marginTop="10dp"
                        android:padding="8dp">

                        <!-- Left Icon -->
                        <ImageView
                            android:id="@+id/insta_icon"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/insta"
                            android:contentDescription="select_political_party_icon" />
                        <View
                            android:id="@+id/insta_line"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/insta_icon"
                            android:layout_marginLeft="2dp"
                            android:background="@color/black" />
                        <EditText
                            android:id="@+id/insta_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/insta_icon"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center_vertical"
                            android:hint=" "
                            android:maxLength="40"
                            android:inputType="textCapCharacters"
                            android:textSize="16sp"
                            android:background="@android:color/transparent" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/textview_background"
                        android:layout_marginTop="10dp"
                        android:padding="8dp">

                        <!-- Left Icon -->
                        <ImageView
                            android:id="@+id/twitter_icon"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/twitter"
                            android:contentDescription="select_political_party_icon" />
                        <View
                            android:id="@+id/Twitter_line"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/twitter_icon"
                            android:layout_marginLeft="2dp"
                            android:background="@color/black" />
                        <EditText
                            android:id="@+id/twitter_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/twitter_icon"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center_vertical"
                            android:hint=" "
                            android:maxLength="40"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp"
                            android:background="@android:color/transparent" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/textview_background"
                        android:layout_marginTop="10dp"
                        android:padding="8dp">

                        <!-- Left Icon -->
                        <ImageView
                            android:id="@+id/youtub_icon"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/youtub_icon"
                            android:contentDescription="select_political_party_icon" />
                        <View
                            android:id="@+id/off_add_line"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/youtub_icon"
                            android:layout_marginLeft="2dp"
                            android:background="@color/black" />
                        <EditText
                            android:id="@+id/youtub_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/youtub_icon"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center_vertical"
                            android:hint=" "
                            android:maxLength="30"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp"
                            android:background="@android:color/transparent" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/textview_background"
                        android:layout_marginTop="10dp"
                        android:padding="8dp">

                        <!-- Left Icon -->
                        <ImageView
                            android:id="@+id/whtsapp_icon"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/whatsapp" />
                        <View
                            android:id="@+id/whtsapp_line"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/whtsapp_icon"
                            android:layout_marginLeft="2dp"
                            android:background="@color/black" />
                        <EditText
                            android:id="@+id/whatsapp_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/whtsapp_icon"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center_vertical"
                            android:hint=" "
                            android:maxLength="30"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp"
                            android:background="@android:color/transparent" />
                    </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/textview_background"
                    android:layout_marginTop="10dp"
                    android:padding="8dp">

                    <!-- Left Icon -->
                    <ImageView
                        android:id="@+id/web_icon"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/web" />
                    <View
                        android:id="@+id/web_line"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/web_icon"
                        android:layout_marginLeft="2dp"
                        android:background="@color/black" />
                    <EditText
                        android:id="@+id/web_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/web_icon"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center_vertical"
                        android:hint=" "
                        android:maxLength="30"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:background="@android:color/transparent" />
                </RelativeLayout>
                </LinearLayout>
        </ScrollView>
    <!-- Bottom Navigation Section -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/app_background_color"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- "Not Sure" Button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Sure"
            android:background="@color/app_background_color"
            android:textColor="#FFFFFF"
            android:layout_gravity="start" />

        <!-- Spacer to push buttons to opposite sides -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- "Next" Button -->
        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttion_background"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="end" />
    </LinearLayout>

</RelativeLayout>